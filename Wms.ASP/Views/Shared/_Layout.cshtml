<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Sistema de Gestión de Almacén</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Wms.ASP.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-boxes me-2 fs-4"></i>
                <span class="d-none d-md-inline">Sistema de Gestión de Almacén</span>
                <span class="d-md-none">SGA</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-pill mx-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active bg-white bg-opacity-25" : "")" 
                           asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 me-1"></i>
                            <span class="d-none d-lg-inline">Panel de Control</span>
                            <span class="d-lg-none">Panel</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3 py-2 rounded-pill mx-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Receiving" || ViewContext.RouteData.Values["controller"]?.ToString() == "Picking" ? "active bg-white bg-opacity-25" : "")" 
                           href="#" id="operationsDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-arrow-repeat me-1"></i>
                            <span class="d-none d-lg-inline">Operaciones</span>
                            <span class="d-lg-none">Ops</span>
                        </a>
                        <ul class="dropdown-menu shadow border-0 mt-2">
                            <li>
                                <a class="dropdown-item py-2" asp-controller="Receiving" asp-action="Receive">
                                    <i class="bi bi-box-arrow-in-down me-2 text-success"></i>Recepción
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item py-2" asp-controller="Receiving" asp-action="Putaway">
                                    <i class="bi bi-box-arrow-right me-2 text-info"></i>Almacenamiento
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item py-2" asp-controller="Picking" asp-action="Index">
                                    <i class="bi bi-box-arrow-up me-2 text-primary"></i>Despacho
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-pill mx-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active bg-white bg-opacity-25" : "")" 
                           asp-controller="Inventory" asp-action="Index">
                            <i class="bi bi-stack me-1"></i>
                            <span class="d-none d-lg-inline">Inventario</span>
                            <span class="d-lg-none">Inv</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 py-2 rounded-pill mx-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Movements" ? "active bg-white bg-opacity-25" : "")" 
                           asp-controller="Movements" asp-action="Index">
                            <i class="bi bi-arrow-left-right me-1"></i>
                            <span class="d-none d-lg-inline">Movimientos</span>
                            <span class="d-lg-none">Mov</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3 py-2 rounded-pill mx-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Items" || ViewContext.RouteData.Values["controller"]?.ToString() == "Locations" ? "active bg-white bg-opacity-25" : "")" 
                           href="#" id="managementDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear me-1"></i>
                            <span class="d-none d-lg-inline">Gestión</span>
                            <span class="d-lg-none">Gest</span>
                        </a>
                        <ul class="dropdown-menu shadow border-0 mt-2">
                            <li>
                                <a class="dropdown-item py-2" asp-controller="Items" asp-action="Index">
                                    <i class="bi bi-box me-2 text-warning"></i>Artículos
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item py-2" asp-controller="Locations" asp-action="Index">
                                    <i class="bi bi-geo-alt me-2 text-danger"></i>Ubicaciones
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center px-3 py-2 bg-white bg-opacity-10 rounded-pill" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-2 fs-5"></i>
                                <span class="fw-medium">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="userDropdown">
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                        <button type="submit" class="dropdown-item py-2">
                                            <i class="bi bi-box-arrow-right me-2 text-danger"></i>Cerrar Sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 rounded-pill mx-1" asp-controller="Auth" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="flex-grow-1">
    <div class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3 fs-4 text-success"></i>
                    <div>
                        <strong>¡Éxito!</strong>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-3 fs-4 text-danger"></i>
                    <div>
                        <strong>¡Error!</strong>
                        <div>@TempData["ErrorMessage"]</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-3 fs-4 text-info"></i>
                    <div>
                        <strong>Información</strong>
                        <div>@TempData["InfoMessage"]</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="bg-primary border-top mt-auto">
    <div class="container py-4">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="d-flex align-items-center text-white">
                    <i class="bi bi-boxes me-2 fs-5"></i>
                    <span class="fw-medium">&copy; 2025 - Sistema de Gestión de Almacén</span>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <small class="text-white-50 d-flex align-items-center justify-content-md-end">
                    <span>Desarrollado con</span>
                    <i class="bi bi-heart-fill text-danger mx-1"></i>
                    <span>por</span>
                    <span class="fw-semibold ms-1">Ahmed Osama</span>
                    <span class="ms-2">(RealAhmedOsama)</span>
                    <span class="ms-2">| Co-desarrollado por RADE Studio S.A.S</span>
                </small>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>