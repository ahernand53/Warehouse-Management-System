@model EditLocationViewModel
@{
    ViewData["Title"] = "Editar Ubicación";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-pencil me-2 text-primary"></i>
        Editar Ubicación
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>
        Volver a Ubicaciones
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary bg-opacity-10 border-bottom">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-geo-alt me-2"></i>
                    Información de la Ubicación
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row g-3">
                        <!-- Basic Information -->
                        <div class="col-md-6">
                            <label for="Code" class="form-label">Código de Ubicación</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-qr-code"></i>
                                </span>
                                <input asp-for="Code" class="form-control" readonly disabled/>
                            </div>
                            <input type="hidden" asp-for="Code" />
                            <div class="form-text">El código no puede ser modificado</div>
                        </div>

                        <div class="col-md-6">
                            <label for="Name" class="form-label">Nombre de la Ubicación <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-tag"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre de la ubicación" required/>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="Capacity" class="form-label">Capacidad</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-box-seam"></i>
                                </span>
                                <input asp-for="Capacity" class="form-control" type="number" min="0" placeholder="0 (ilimitada)"/>
                            </div>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                            <div class="form-text">Deje en 0 para capacidad ilimitada</div>
                        </div>

                        <!-- Divider -->
                        <div class="col-12">
                            <hr class="my-4">
                            <h6 class="text-muted">Propiedades de la Ubicación</h6>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsPickable" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="IsPickable">
                                    <i class="bi bi-box-arrow-up me-1"></i>
                                    Ubicación Despachable
                                </label>
                            </div>
                            <div class="form-text">Permitir operaciones de picking desde esta ubicación</div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsReceivable" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="IsReceivable">
                                    <i class="bi bi-box-arrow-in-down me-1"></i>
                                    Ubicación Recepcionable
                                </label>
                            </div>
                            <div class="form-text">Permitir operaciones de recepción en esta ubicación</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-12 pt-3">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

