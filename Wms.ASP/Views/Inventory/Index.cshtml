@model InventoryViewModel
@{
    ViewData["Title"] = "Gestión de Inventario";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-stack me-2 text-primary"></i>
        Gestión de Inventario
    </h2>
    @if (Model.TotalInventoryValue.HasValue && Model.TotalInventoryValue.Value > 0)
    {
        <div class="alert alert-success mb-0">
            <strong>Valor Total del Inventario:</strong> @Model.TotalInventoryValue.Value.ToString("C2")
        </div>
    }
</div>

<!-- Action Bar -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">Buscar Inventario</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@Model.SearchTerm" placeholder="Buscar por SKU, nombre o ubicación">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="showSummary" name="showSummary"
                           value="true" @(Model.ShowSummary ? "checked" : "")>
                    <label class="form-check-label" for="showSummary">
                        Mostrar Vista Resumen
                    </label>
                </div>
            </div>
            <div class="col-md-5">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>
                        Buscar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>
                        Limpiar
                    </a>
                    <button type="button" class="btn btn-outline-primary" onclick="window.location.reload()">
                        <i class="bi bi-arrow-clockwise me-1"></i>
                        Actualizar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.ShowSummary)
{
    <!-- Summary View -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="card-title mb-0">
                <i class="bi bi-bar-chart-line me-2 text-success"></i>
                Resumen de Inventario (@Model.StockSummary.Count artículos)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.StockSummary.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>SKU</th>
                            <th>Nombre del Artículo</th>
                            <th class="text-end">Cantidad Total</th>
                            <th class="text-end">Reservado</th>
                            <th class="text-end">Disponible</th>
                            <th class="text-end">Precio</th>
                            <th class="text-end">Valor Total</th>
                            <th class="text-center">Ubicaciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.StockSummary)
                        {
                            <tr>
                                <td class="fw-medium">@item.ItemSku</td>
                                <td>@item.ItemName</td>
                                <td class="text-end">@item.TotalQuantity.ToString("N2")</td>
                                <td class="text-end text-warning">@item.TotalReserved.ToString("N2")</td>
                                <td class="text-end">
                                    <span class="fw-medium text-@(item.TotalAvailable > 0 ? "success" : "danger")">
                                        @item.TotalAvailable.ToString("N2")
                                    </span>
                                </td>
                                <td class="text-end">
                                    @if (item.ItemPrice.HasValue)
                                    {
                                        <span>@item.ItemPrice.Value.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.TotalValue.HasValue)
                                    {
                                        <span class="fw-bold text-success">@item.TotalValue.Value.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@item.LocationCount</span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 mb-3"></i>
                    <p class="mb-0">No hay datos de resumen de inventario disponibles</p>
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- Detailed View -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2 text-primary"></i>
                Detalles de Inventario (@Model.StockItems.Count artículos)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.StockItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>SKU</th>
                            <th>Nombre del Artículo</th>
                            <th>Ubicación</th>
                            <th class="text-end">Disponible</th>
                            <th class="text-end">Reservado</th>
                            <th class="text-end">Disponible Neto</th>
                            <th class="text-end">Precio</th>
                            <th class="text-end">Valor Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.StockItems)
                        {
                            <tr>
                                <td class="fw-medium">@item.ItemSku</td>
                                <td>@item.ItemName</td>
                                <td>
                                    <span class="badge bg-secondary">@item.LocationCode</span>
                                    <br><small class="text-muted">@item.LocationName</small>
                                </td>
                                <td class="text-end">@item.QuantityAvailable.ToString("N2")</td>
                                <td class="text-end text-warning">@item.QuantityReserved.ToString("N2")</td>
                                <td class="text-end">
                                    <span class="fw-medium text-@(item.AvailableQuantity > 0 ? "success" : "danger")">
                                        @item.AvailableQuantity.ToString("N2")
                                    </span>
                                </td>
                                <td class="text-end">
                                    @if (item.ItemPrice.HasValue)
                                    {
                                        <span>@item.ItemPrice.Value.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.TotalValue.HasValue)
                                    {
                                        <span class="fw-bold text-success">@item.TotalValue.Value.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Adjust"
                                       asp-route-itemSku="@item.ItemSku"
                                       asp-route-locationCode="@item.LocationCode"
                                       asp-route-currentQuantity="@item.QuantityAvailable"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Ajustar Inventario">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 mb-3"></i>
                    <p class="mb-0">No se encontraron artículos de inventario</p>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <p>Intente ajustar sus criterios de búsqueda</p>
                    }
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when showSummary checkbox is changed
            $('#showSummary').change(function() {
                $(this).closest('form').submit();
            });
        });
    </script>
}