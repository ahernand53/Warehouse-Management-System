@model PickingViewModel
@{
    ViewData["Title"] = "Operaciones de Picking";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-box-arrow-up me-2 text-primary"></i>
        Operaciones de Picking
    </h2>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary bg-opacity-10 border-bottom">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-box-arrow-up me-2"></i>
                    Seleccionar Artículos para Pedidos
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Pick" method="post">
                    <div class="row g-3">
                        <!-- Order Information -->
                        <div class="col-12">
                            <label for="OrderNumber" class="form-label">Número de Orden <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-receipt"></i>
                                </span>
                                <input asp-for="OrderNumber" class="form-control" placeholder="Ingrese el número de orden" required autofocus/>
                            </div>
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                            <div class="form-text">Ingrese el número de orden o referencia para este picking</div>
                        </div>

                        <!-- Item Information -->
                        <div class="col-md-6">
                            <label for="ItemSku" class="form-label">SKU del Artículo <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-upc-scan"></i>
                                </span>
                                <input asp-for="ItemSku" class="form-control" placeholder="Escanee o ingrese el SKU" required/>
                            </div>
                            <span asp-validation-for="ItemSku" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="Quantity" class="form-label">Cantidad a Despachar <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-123"></i>
                                </span>
                                <input asp-for="Quantity" class="form-control" type="number" step="0.01" min="0.01" required/>
                            </div>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label for="LocationCode" class="form-label">Ubicación de Origen <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-geo-alt"></i>
                                </span>
                                <input asp-for="LocationCode" class="form-control" placeholder="Ingrese el código de ubicación" required/>
                            </div>
                            <span asp-validation-for="LocationCode" class="text-danger"></span>
                        </div>

                        <!-- Optional Fields -->
                        <div class="col-md-6">
                            <label for="LotNumber" class="form-label">Número de Lote</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-tag"></i>
                                </span>
                                <input asp-for="LotNumber" class="form-control" placeholder="Ingrese el número de lote (si se requiere)"/>
                            </div>
                            <span asp-validation-for="LotNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="SerialNumber" class="form-label">Número de Serie</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-qr-code"></i>
                                </span>
                                <input asp-for="SerialNumber" class="form-control" placeholder="Ingrese el número de serie (si se requiere)"/>
                            </div>
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label for="Notes" class="form-label">Notas</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Ingrese cualquier nota sobre esta operación de picking (opcional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-12 pt-3">
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-outline-secondary" onclick="clearForm()">
                                    <i class="bi bi-arrow-clockwise me-1"></i>
                                    Limpiar
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Completar Picking
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-light border-bottom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>
                    Acciones Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-6">
                        <a asp-controller="Receiving" asp-action="Receive" class="btn btn-outline-success w-100">
                            <i class="bi bi-box-arrow-in-down me-2"></i>
                            Ir a Recepción
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Inventory" asp-action="Index" class="btn btn-outline-info w-100">
                            <i class="bi bi-stack me-2"></i>
                            Verificar Inventario
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script>
        let itemAutocomplete, locationAutocomplete;

        function clearForm() {
            $('form')[0].reset();
            $('#OrderNumber').focus();
        }

        $(document).ready(function() {
            // Initialize autocomplete for ItemSku
            itemAutocomplete = initAutocomplete('#ItemSku', {
                apiUrl: '/api/api/items/search',
                minLength: 2,
                debounceMs: 400
            });

            // Initialize autocomplete for LocationCode (pickable locations)
            locationAutocomplete = initAutocomplete('#LocationCode', {
                apiUrl: '/api/api/locations/search',
                type: 'pickable',
                minLength: 2,
                debounceMs: 400
            });

            // Focus on order number input after successful submission
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                setTimeout(function() {
                    $('#OrderNumber').focus();
                }, 100);
                </text>
            }

            // Enter key navigation
            $('input, textarea').on('keypress', function(e) {
                if (e.which === 13 && !$(this).is('textarea')) {
                    e.preventDefault();
                    var inputs = $('input[type!="hidden"]:visible, textarea:visible');
                    var nextInput = inputs.eq(inputs.index(this) + 1);
                    if (nextInput.length) {
                        nextInput.focus();
                    } else {
                        $('button[type="submit"]').focus();
                    }
                }
            });
        });
    </script>
}