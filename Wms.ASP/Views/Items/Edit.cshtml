@model EditItemViewModel
@{
    ViewData["Title"] = "Editar Artículo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-pencil-square me-2 text-primary"></i>
        Editar Artículo
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>
        Volver a Artículos
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary bg-opacity-10 border-bottom">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-box me-2"></i>
                    Información del Artículo
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden"/>

                    <div class="row g-3">
                        <!-- Basic Information -->
                        <div class="col-md-6">
                            <label for="Sku" class="form-label">SKU</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-upc-scan"></i>
                                </span>
                                <input asp-for="Sku" class="form-control" readonly/>
                            </div>
                            <span asp-validation-for="Sku" class="text-danger"></span>
                            <div class="form-text">El SKU no puede cambiarse después de la creación</div>
                        </div>

                        <div class="col-md-6">
                            <label for="Name" class="form-label">Nombre <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-tag"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del artículo" required/>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label for="Description" class="form-label">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ingrese la descripción del artículo (opcional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="UnitOfMeasure" class="form-label">Unidad de Medida</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-rulers"></i>
                                </span>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="EA">Unidad (EA)</option>
                                    <option value="KG">Kilogramo (KG)</option>
                                    <option value="LB">Libra (LB)</option>
                                    <option value="L">Litro (L)</option>
                                    <option value="M">Metro (M)</option>
                                    <option value="FT">Pie (FT)</option>
                                    <option value="BOX">Caja</option>
                                    <option value="CASE">Estuche</option>
                                    <option value="PALLET">Pallet</option>
                                </select>
                            </div>
                            <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="Price" class="form-label">Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-currency-dollar"></i>
                                </span>
                                <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="Ingrese el precio del artículo (opcional)"/>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <div class="form-text">Precio por unidad</div>
                        </div>

                        <div class="col-md-6">
                            <label for="Barcode" class="form-label">Código de Barras</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-upc"></i>
                                </span>
                                <input asp-for="Barcode" class="form-control" placeholder="Ingrese el código de barras (opcional)"/>
                            </div>
                            <span asp-validation-for="Barcode" class="text-danger"></span>
                        </div>

                        <!-- Divider -->
                        <div class="col-12">
                            <hr class="my-4">
                            <h6 class="text-muted">Requisitos de Seguimiento</h6>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Nota:</strong> Cambiar los requisitos de seguimiento puede afectar los registros de inventario existentes.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="RequiresLot" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="RequiresLot">
                                    Requiere Seguimiento de Lote
                                </label>
                            </div>
                            <div class="form-text">Habilitar si este artículo necesita seguimiento de lote/lote</div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="RequiresSerial" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="RequiresSerial">
                                    Requiere Seguimiento por Serie
                                </label>
                            </div>
                            <div class="form-text">Habilitar si este artículo necesita seguimiento por número de serie</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-12 pt-3">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Actualizar Artículo
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-light border-bottom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Información Adicional
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-6">
                        <a asp-controller="Inventory" asp-action="Index" asp-route-searchTerm="@Model.Sku"
                           class="btn btn-outline-info w-100">
                            <i class="bi bi-stack me-2"></i>
                            Ver Niveles de Stock
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-outline-secondary w-100" disabled>
                            <i class="bi bi-graph-up me-2"></i>
                            Historial de Movimientos
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}